@namespace WithTeachers.Pages.Scheduler
@using WithTeachers.Data

<td rowspan="@RowSpan" @onclick="HandleClick" class="small @CellClass @(Day.DayOfYear == DateTime.Now.DayOfYear ? "currentDay" : "") @(Day.Minute != 30 ? "dash" : "nolineTop")">@Day.ToString("dd MMMM hh:mm tt")</td>

@code {
    [Parameter]
    public int[,] SpanMatrix { get; set; }

    [Parameter]
    public int X { get; set; }

    [Parameter]
    public int Y { get; set; }

    [Parameter]
    public bool IsResizable { get; set; }

    [Parameter]
    public DateTime Day { get; set; }

    [Parameter]
    public string CellClass { get; set; }

    [Parameter]
    public List<Activity> Activities { get; set; }

    private int RowSpan;

    protected override async Task OnInitializedAsync()
    {
        RowSpan = SpanMatrix[X, Y];
    }

    private void HandleClick()
    {
        RowSpan++;
    }
}